<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="screens.TelaCriarClubes"
            style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);">
    <Button fx:id="menuMontagem" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#abrirMenu" style="-fx-background-color: rgba(255,255,255,0.12);                        -fx-background-radius: 10;                        -fx-text-fill: white;                        -fx-font-size: 20px;                        -fx-font-weight: bold;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" text="☰" />

    <!-- Título -->
    <Label fx:id="labelTitulo" text="Criar Clubes"
           layoutX="200" layoutY="20" prefWidth="200" alignment="CENTER"
           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 2, 0, 0, 1);">
        <font>
            <Font size="24" />
        </font>
    </Label>

    <!-- Seção dos campos -->
    <HBox layoutX="50.0" layoutY="80.0" spacing="50.0" prefWidth="500.0" prefHeight="160.0" alignment="CENTER">

        <!-- Clube 1 -->
        <VBox spacing="10.0" prefWidth="200.0" alignment="CENTER">
            <Label text="Clube 1" style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: 600;" />
            <TextField fx:id="campoClube1" promptText="Digite o nome do clube"
                       prefHeight="32"
                       style="-fx-background-radius: 10; -fx-background-color: rgba(255,255,255,0.85);
                              -fx-text-fill: #222; -fx-font-size: 14px; -fx-padding: 6 10 6 10;" />
        </VBox>

        <!-- Clube 2 -->
        <VBox spacing="10.0" prefWidth="200.0" alignment="CENTER">
            <Label text="Clube 2" style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: 600;" />
            <TextField fx:id="campoClube2" promptText="Digite o nome do clube"
                       prefHeight="32"
                       style="-fx-background-radius: 10; -fx-background-color: rgba(255,255,255,0.85);
                              -fx-text-fill: #222; -fx-font-size: 14px; -fx-padding: 6 10 6 10;" />
        </VBox>

    </HBox>

    <!-- Botão de criação -->
    <Button fx:id="botaoCriarClubes" text="Criar Clubes"
            layoutX="240.0" layoutY="280.0" prefWidth="120.0" prefHeight="36.0"
            style="-fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 14;
                   -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 4, 0, 0, 2);" />

</AnchorPane>
